<Page x:Class="WpfApp_tinncse181736.CustomerProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_tinncse181736"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="My Profile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="My Profile" Style="{StaticResource HeaderTextBlockStyle}"/>

        <!-- Profile Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Company Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Company Name *" Margin="0,0,20,5"/>
                <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtCompanyName" Margin="0,0,20,20" Padding="5"/>

                <!-- Contact Name -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Contact Name *" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtContactName" Margin="0,0,0,20" Padding="5"/>

                <!-- Contact Title -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Contact Title" Margin="0,0,20,5"/>
                <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtContactTitle" Margin="0,0,20,20" Padding="5"/>

                <!-- Phone -->
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Phone *" Margin="0,0,0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPhone" Margin="0,0,0,20" Padding="5"/>

                <!-- Address -->
                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Text="Address" Margin="0,0,0,5"/>
                <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" x:Name="txtAddress" Margin="0,0,0,20" 
                         Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Update Profile" Click="btnUpdateProfile_Click" Style="{StaticResource SuccessButtonStyle}" Width="150" Height="35"/>
        </StackPanel>
    </Grid>
</Page>
