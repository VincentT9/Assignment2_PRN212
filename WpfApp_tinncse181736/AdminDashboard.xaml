<Window x:Class="WpfApp_tinncse181736.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Admin Dashboard - Lucy Sales System" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Grid Grid.Column="0" Background="#2c3e50">
            <StackPanel>
                <TextBlock Text="Admin Dashboard" FontSize="18" FontWeight="Bold" Foreground="White"
                       Margin="10,20,10,5" TextAlignment="Center"/>

                <TextBlock x:Name="txtWelcomeMessage" Foreground="White" 
                       Margin="10,0,10,20" TextAlignment="Center"/>

                <Button x:Name="btnCustomers" Content="Customers" Click="NavigationButton_Click"
                    Margin="10,5" Height="40" Background="#34495e" Foreground="White" BorderThickness="0"/>

                <Button x:Name="btnProducts" Content="Products" Click="NavigationButton_Click"
                    Margin="10,5" Height="40" Background="#34495e" Foreground="White" BorderThickness="0"/>

                <Button x:Name="btnOrders" Content="Orders" Click="NavigationButton_Click"
                    Margin="10,5" Height="40" Background="#34495e" Foreground="White" BorderThickness="0"/>

                <Button x:Name="btnEmployees" Content="Employees" Click="NavigationButton_Click"
                    Margin="10,5" Height="40" Background="#34495e" Foreground="White" BorderThickness="0"/>

                <Button x:Name="btnReports" Content="Reports" Click="NavigationButton_Click"
                    Margin="10,5" Height="40" Background="#34495e" Foreground="White" BorderThickness="0"/>

                <Button x:Name="btnLogout" Content="Logout" Click="btnLogout_Click"
                    Margin="10,40,10,5" Height="40" Background="#e74c3c" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Column="1" x:Name="contentArea" Margin="10">
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
