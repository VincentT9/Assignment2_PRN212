<Window x:Class="WpfApp_tinncse181736.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Lucy Sales System - Login" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Lucy Sales Management System" FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,30" TextAlignment="Center"/>

            <RadioButton x:Name="rbAdmin" Content="Admin Login" IsChecked="True" 
                         Margin="0,0,0,10" GroupName="LoginType" Checked="rbAdmin_Checked"/>
            <RadioButton x:Name="rbCustomer" Content="Customer Login" 
                         Margin="0,0,0,20" GroupName="LoginType" Checked="rbCustomer_Checked"/>

            <TextBlock x:Name="txtUsernameLabel" Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Padding="5"/>

            <Button Content="Login" Style="{StaticResource PrimaryButtonStyle}" 
                    Click="btnLogin_Click" Height="35"/>

            <TextBlock x:Name="txtErrorMessage" Foreground="Red" TextWrapping="Wrap" 
                       Margin="0,10,0,0" TextAlignment="Center" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
