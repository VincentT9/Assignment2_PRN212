<Window x:Class="WpfApp_tinncse181736.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Employee" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Employee Information" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Name -->
                <TextBlock Text="Name *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName" Margin="0,0,0,15" Padding="5"/>

                <!-- Username -->
                <TextBlock Text="Username *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,15" Padding="5"/>

                <!-- Password -->
                <TextBlock Text="Password *" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,15" Padding="5"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password *" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,15" Padding="5"/>

                <!-- Job Title -->
                <TextBlock Text="Job Title *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtJobTitle" Margin="0,0,0,15" Padding="5"/>

                <!-- Birth Date -->
                <TextBlock Text="Birth Date *" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpBirthDate" Margin="0,0,0,15"/>

                <!-- Hire Date -->
                <TextBlock Text="Hire Date *" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpHireDate" Margin="0,0,0,15"/>

                <!-- Address -->
                <TextBlock Text="Address" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" Margin="0,0,0,15" Padding="5" 
                         TextWrapping="Wrap" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Style="{StaticResource SuccessButtonStyle}" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="btnSave_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Background="#95a5a6" Foreground="White"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
