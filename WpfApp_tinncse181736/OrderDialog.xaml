<Window x:Class="WpfApp_tinncse181736.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Create Order" Height="650" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Order" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Order Information -->
        <GroupBox Grid.Row="1" Header="Order Information" Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Customer Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer *" Margin="0,0,10,5"/>
                <ComboBox x:Name="cmbCustomer" Grid.Row="1" Grid.Column="0" 
                          Margin="0,0,10,15" Padding="5" 
                          DisplayMemberPath="CompanyName" 
                          SelectedValuePath="CustomerID"/>

                <!-- Employee Selection (if admin) -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Employee *" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbEmployee" Grid.Row="1" Grid.Column="1" 
                          Margin="0,0,0,15" Padding="5" 
                          DisplayMemberPath="Name" 
                          SelectedValuePath="EmployeeID"/>

                <!-- Order Date -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Order Date *" Margin="0,0,10,5"/>
                <DatePicker x:Name="dpOrderDate" Grid.Row="2" Grid.Column="1" 
                            Margin="0,0,0,15"/>
            </Grid>
        </GroupBox>

        <!-- Order Details Section -->
        <GroupBox Grid.Row="2" Header="Order Details" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Product Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Product" Margin="0,0,10,5"/>
                <ComboBox x:Name="cmbProduct" Grid.Row="1" Grid.Column="0" 
                          Margin="0,0,10,10" Padding="5" 
                          DisplayMemberPath="ProductName" 
                          SelectedValuePath="ProductID"
                          SelectionChanged="cmbProduct_SelectionChanged"/>

                <!-- Unit Price -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Unit Price" Margin="0,0,10,5"/>
                <TextBox x:Name="txtUnitPrice" Grid.Row="1" Grid.Column="1" 
                         Margin="0,0,10,10" Padding="5" IsReadOnly="True"/>

                <!-- Quantity -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Quantity" Margin="0,0,10,5"/>
                <TextBox x:Name="txtQuantity" Grid.Row="1" Grid.Column="2" 
                         Margin="0,0,10,10" Padding="5" Text="1"/>

                <!-- Discount -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Discount (%)" Margin="0,0,10,5"/>
                <TextBox x:Name="txtDiscount" Grid.Row="1" Grid.Column="3" 
                         Margin="0,0,10,10" Padding="5" Text="0"/>

                <!-- Add Button -->
                <Button Grid.Row="1" Grid.Column="4" Content="Add" 
                        Click="btnAddItem_Click" 
                        Margin="0,0,0,10" Padding="15,5"
                        Background="#2ecc71" Foreground="White"/>
            </Grid>
        </GroupBox>

        <!-- Order Items List -->
        <DataGrid Grid.Row="3" x:Name="dgOrderItems" AutoGenerateColumns="False" IsReadOnly="True" 
                  Margin="0,10,0,10" GridLinesVisibility="Horizontal" 
                  AlternatingRowBackground="#f5f5f5" RowBackground="White" BorderBrush="#e0e0e0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat='{}{0:C}'}" Width="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding Discount, StringFormat='{}{0:P0}'}" Width="80"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='{}{0:C}'}" Width="100"/>
                <DataGridTemplateColumn Header="Actions" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove" Click="btnRemoveItem_Click" Tag="{Binding}" 
                                    Background="#e74c3c" Foreground="White" Padding="5,2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Total Order Amount: " VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock x:Name="txtTotalAmount" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0" Text="$0.00"/>
            <Button Content="Save Order" Style="{StaticResource SuccessButtonStyle}" Width="100" Height="30" Margin="0,0,10,0" 
                    Click="btnSaveOrder_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Background="#95a5a6" Foreground="White"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
