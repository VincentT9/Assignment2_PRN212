<Page x:Class="WpfApp_tinncse181736.CustomerOrderHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_tinncse181736"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Order History">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="My Order History" Style="{StaticResource HeaderTextBlockStyle}"/>

        <!-- Filter Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" x:Name="dpStartDate" Margin="0,0,20,0"/>

            <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="3" x:Name="dpEndDate" Margin="0,0,20,0"/>

            <Button Grid.Column="4" Content="Filter" Click="btnFilter_Click" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </Grid>

        <!-- Orders Data Grid -->
        <DataGrid Grid.Row="2" x:Name="dgOrders" AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionMode="Single" SelectionChanged="dgOrders_SelectionChanged"
                  GridLinesVisibility="Horizontal" AlternatingRowBackground="#f5f5f5" 
                  RowBackground="White" BorderBrush="#e0e0e0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="80"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat='{}{0:MM/dd/yyyy}'}" Width="120"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='{}{0:C}'}" Width="120"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Details" Click="btnDetails_Click" Tag="{Binding}" 
                                    Background="#3498db" Foreground="White" Padding="5,2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- New Order Button -->
        <Button Grid.Row="3" Content="Place New Order" HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="btnPlaceNewOrder_Click" Style="{StaticResource SuccessButtonStyle}"/>
    </Grid>
</Page>
