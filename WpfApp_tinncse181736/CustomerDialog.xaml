<Window x:Class="WpfApp_tinncse181736.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Customer Information" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1">
            <!-- Company Name -->
            <TextBlock Text="Company Name *" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCompanyName" Margin="0,0,0,15" Padding="5"/>

            <!-- Contact Name -->
            <TextBlock Text="Contact Name *" Margin="0,0,0,5"/>
            <TextBox x:Name="txtContactName" Margin="0,0,0,15" Padding="5"/>

            <!-- Contact Title -->
            <TextBlock Text="Contact Title" Margin="0,0,0,5"/>
            <TextBox x:Name="txtContactTitle" Margin="0,0,0,15" Padding="5"/>

            <!-- Address -->
            <TextBlock Text="Address" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAddress" Margin="0,0,0,15" Padding="5" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>

            <!-- Phone -->
            <TextBlock Text="Phone *" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,15" Padding="5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Style="{StaticResource SuccessButtonStyle}" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="btnSave_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Background="#95a5a6" Foreground="White"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
