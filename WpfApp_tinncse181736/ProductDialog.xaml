<Window x:Class="WpfApp_tinncse181736.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_tinncse181736"
        mc:Ignorable="d"
        Title="Product" Height="550" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Product Information" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Product Name -->
                <TextBlock Text="Product Name *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtProductName" Margin="0,0,0,15" Padding="5"/>

                <!-- Category -->
                <TextBlock Text="Category *" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbCategory" Margin="0,0,0,15" Padding="5" 
                          DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"/>

                <!-- Quantity Per Unit -->
                <TextBlock Text="Quantity Per Unit" Margin="0,0,0,5"/>
                <TextBox x:Name="txtQuantityPerUnit" Margin="0,0,0,15" Padding="5"/>

                <!-- Unit Price -->
                <TextBlock Text="Unit Price *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUnitPrice" Margin="0,0,0,15" Padding="5"/>

                <!-- Units In Stock -->
                <TextBlock Text="Units In Stock *" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUnitsInStock" Margin="0,0,0,15" Padding="5"/>

                <!-- Units On Order -->
                <TextBlock Text="Units On Order" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUnitsOnOrder" Margin="0,0,0,15" Padding="5"/>

                <!-- Reorder Level -->
                <TextBlock Text="Reorder Level" Margin="0,0,0,5"/>
                <TextBox x:Name="txtReorderLevel" Margin="0,0,0,15" Padding="5"/>

                <!-- Discontinued -->
                <CheckBox x:Name="chkDiscontinued" Content="Discontinued" Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Style="{StaticResource SuccessButtonStyle}" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="btnSave_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Background="#95a5a6" Foreground="White"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
